<%@ Page Title="" Language="C#" MasterPageFile="~/Manage.Master" AutoEventWireup="true" CodeBehind="BookIn.aspx.cs" Inherits="LibraryDemo_1.PC_pages.BookIn" %>

<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">

    <style type="text/css">
        td{
            width:200px;
            height:50px;
            padding-left:5%;
            padding-right:5%;
        }
        th{
            width:400px;
            height:50px;
            padding-left:5%;
            padding-right:5%;
        }
    </style>

</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
    

    <div id="bookin" style="text-align:center;">
        <center>
        <table border="1">
            <tr>
                <th colspan="2" style="font-size:x-large;">图书入库信息录入</th>
            </tr>
            <tr>
                <td>图书名称：</td>
                <td>
                    <asp:TextBox ID="TextBox1" runat="server" Width="100%" Height="60%"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <td>图书类型：</td>
                <td>
                    <asp:DropDownList ID="DropDownList1" runat="server" Width="100%" Font-Names="微软雅黑" Font-Size="Medium">
                        <asp:ListItem>马克思主义著作</asp:ListItem>
                        <asp:ListItem>哲学</asp:ListItem>
                        <asp:ListItem>社会科学</asp:ListItem>
                        <asp:ListItem>自然科学</asp:ListItem>
                        <asp:ListItem>综合性图书</asp:ListItem>
                    </asp:DropDownList>
                </td>
            </tr>
            <tr>
                <td>图书作者：</td>
                <td>
                    <asp:TextBox ID="TextBox2" runat="server" Width="100%" Height="60%"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <td>出版社：</td>
                <td>
                    <asp:TextBox ID="TextBox3" runat="server" Width="100%" Height="60%"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <td>新增数量：</td>
                <td>
                    <asp:TextBox ID="TextBox4" runat="server" Width="100%" Height="60%"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <td>图书价格：</td>
                <td>
                    <asp:TextBox ID="TextBox5" runat="server" Width="100%" Height="60%"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <th colspan="2" style="text-align:center">
                    <asp:Button ID="Button1" runat="server" Text="确认" Height="60%" Width="150px" OnClick="Button1_Click" Font-Names="微软雅黑" Font-Size="Medium" />
                </th>
            </tr>
        </table>
            <p>(注意：请仔填写所有所需的入库图书的信息，并且仔细核对！)</p>

        <br /><hr /><br />
        <asp:Button ID="Button2" runat="server" Text="报表导出" Width="100px" OnClick="Button2_Click" Font-Names="微软雅黑" Font-Size="Medium" />&nbsp&nbsp
        <asp:FileUpload ID="FileUpload1" runat="server" Font-Names="微软雅黑" Font-Size="Medium"></asp:FileUpload>
        <asp:Button ID="Button3" runat="server" Text="报表导入" Width="100px" OnClick="Button3_Click" Font-Names="微软雅黑" Font-Size="Medium" />&nbsp&nbsp
        <asp:Button ID="Button4" runat="server" Text="确认新增" Width="100px" OnClick="Button4_Click" OnClientClick="return confirm('入库信息确认？');" Font-Names="微软雅黑" Font-Size="Medium"/>
        <br />
        <asp:RegularExpressionValidator ID="RegularExpressionValidator1" runat="server" ErrorMessage="请上传Excel文件！" ControlToValidate="FileUpload1" ValidationExpression=".*(\.xlsx|\.xls)$"></asp:RegularExpressionValidator>
        <br />
        <asp:GridView ID="GridView1" runat="server" AutoGenerateColumns="False" AutoGenerateDeleteButton="True" CellPadding="0" ForeColor="#333333" GridLines="None" OnRowDeleting="GridView1_RowDeleting" Font-Names="微软雅黑" Font-Size="Medium">
            <AlternatingRowStyle BackColor="White" />
            <Columns>
                <asp:BoundField HeaderText="图书名称" DataField="Bname" />
                <asp:BoundField HeaderText="图书类型" DataField="Btype" />
                <asp:BoundField HeaderText="图书作者" DataField="Bwriter" />
                <asp:BoundField HeaderText="出版社" DataField="Bpub" />
                <asp:BoundField HeaderText="新增数量" DataField="Bnum" />
                <asp:BoundField HeaderText="图书价格" DataField="Bprice" />
            </Columns>
            <EditRowStyle BackColor="#7C6F57" />
            <FooterStyle BackColor="#1C5E55" Font-Bold="True" ForeColor="White" />
            <HeaderStyle BackColor="#1C5E55" Font-Bold="True" ForeColor="White" />
            <PagerStyle BackColor="#666666" ForeColor="White" HorizontalAlign="Center" />
            <RowStyle BackColor="#E3EAEB" />
            <SelectedRowStyle BackColor="#C5BBAF" Font-Bold="True" ForeColor="#333333" />
            <SortedAscendingCellStyle BackColor="#F8FAFA" />
            <SortedAscendingHeaderStyle BackColor="#246B61" />
            <SortedDescendingCellStyle BackColor="#D4DFE1" />
            <SortedDescendingHeaderStyle BackColor="#15524A" />
            </asp:GridView>
        </center>
    </div>
</asp:Content>
